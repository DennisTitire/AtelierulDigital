<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/string_text_bundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Text fragment with bundle"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/int_text_bundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="101"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/string_text_bundle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello friend"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/int_text_bundle"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_dowork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="do work"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/string_text_bundle"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>